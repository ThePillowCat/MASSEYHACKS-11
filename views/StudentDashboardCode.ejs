<%- include('partials/header') %>

<div class="container">
    <h1>Welcome to the Student Dashboard, <%= studentN %>!</h1>
    <div class="button-group">
        <a href="/logout" class="btn btn-danger">Logout</a>
    </div>
    <!-- Class code entry form -->
    <form action="/studentJoinClass" method="POST" class="mt-3">
        <div class="form-group">
            <label for="classCode">Enter Class Code:</label>
            <input type="text" id="classCode" name="classCode" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Join Class</button>
    </form>
</div>

<%- include('partials/footer') %>
